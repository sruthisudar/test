<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rdUngraduated"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME sruthi sudar..."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#1935D1"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="31dp" />

    <RadioGroup
        android:layout_width="386dp"
        android:layout_height="101dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMember">

        <RadioButton
            android:id="@+id/rdGraduated"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Graduated"
            android:textColor="#172B9C" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:text="Ungraduated"
            android:textColor="#172FB3" />
    </RadioGroup>

    <Spinner
        android:id="@+id/spCourses"
        android:layout_width="244dp"
        android:layout_height="44dp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="112dp"
        android:layout_height="46dp"
        android:text="Courses Available"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#1D39D3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="239dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:text="Total Hours per Week"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#192EA1"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="350dp" />

    <TextView
        android:id="@+id/totalHours"
        android:layout_width="241dp"
        android:layout_height="46dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="350dp"
        tools:text="your total hours here" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:text="Total Fees"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#1D38CC"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="437dp" />

    <TextView
        android:id="@+id/totalFees"
        android:layout_width="237dp"
        android:layout_height="42dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="437dp"
        tools:text="Your fees for the selected courses here" />

    <CheckBox
        android:id="@+id/ckAccomodation"
        android:layout_width="169dp"
        android:layout_height="41dp"
        android:text="Accomodation"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#1B30A8"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="524dp" />

    <CheckBox
        android:id="@+id/ckMedical"
        android:layout_width="197dp"
        android:layout_height="40dp"
        android:text="Medical Insurance"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#172EB3"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="524dp" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        app:backgroundTint="#1D38CF"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="593dp" />

    <TextView
        android:id="@+id/totalCost"
        android:layout_width="283dp"
        android:layout_height="36dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="657dp" />


</androidx.constraintlayout.widget.ConstraintLayout>